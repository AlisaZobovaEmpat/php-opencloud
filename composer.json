{
  "name": "rackspace/php-opencloud",
  "description": "PHP SDK for Rackspace/OpenStack APIs",
  "keywords": ["rackspace", "openstack", "opencloud", "swift", "nova"],
  "type": "library",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Jamie Hannaford",
      "email": "jamie.hannaford@rackspace.com",
      "homepage" : "https://github.com/jamiehannaford"
    }
  ],
  "autoload": {
    "psr-0": {
      "OpenCloud": ["lib/"]
    }
  },
  "autoload-dev": {
    "psr-0": {
      "OpenCloud": ["tests/"]
    }
  },
  "require": {
    "php" : ">=8.1",
    "guzzlehttp/guzzle" : "^7.7",
    "psr/log": "^1.1",
    "mikemccabe/json-patch-php": "~0.1"
  },
  "require-dev" : {
    "phpunit/phpunit": "^9.0",
    "phpspec/prophecy": "^1.10",
    "php-coveralls/php-coveralls": "^2.7",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "friendsofphp/php-cs-fixer": "*",
    "apigen/apigen": "^v7.0.0-alpha"
  },
  "extra": {
    "branch-alias": {
      "dev-working": "1.16-dev"
    }
  }
}
